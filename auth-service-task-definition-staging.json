{
  "family": "mpsp-auth-staging",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "cc-auth-service",
      "image": "567347231314.dkr.ecr.ap-south-1.amazonaws.com/cc-auth-service",
      "cpu": 512,
      "memory": 1024,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "USER_SERVICE_URL",
          "value": "http://user.staging-environment-cluster:3000"
        },
        {
          "name": "DB_NAME",
          "value": "auth"
        },
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "staging"
        },
        {
          "name": "SCHOOL_SERVICE_URL",
          "value": "http://school.staging-environment-cluster:4000"
        },
        {
          "name": "NOTIFICATION_SERVICE_URL",
          "value": "http://notification.staging-environment-cluster:3000"
        }
      ],
      "secrets": [
        {
          "name": "DB_HOST",
          "valueFrom": "arn:aws:secretsmanager:ap-south-1:567347231314:secret:staging/mpsp-rds-4odZGK:host::"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:ap-south-1:567347231314:secret:staging/mpsp-rds-4odZGK:password::"
        },
        {
          "name": "DB_PORT",
          "valueFrom": "arn:aws:secretsmanager:ap-south-1:567347231314:secret:staging/mpsp-rds-4odZGK:port::"
        },
        {
          "name": "DB_USER",
          "valueFrom": "arn:aws:secretsmanager:ap-south-1:567347231314:secret:staging/mpsp-rds-4odZGK:username::"
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:ap-south-1:567347231314:secret:dev/jwt_secret-hcksPY:token_signing_key::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/mpsp-auth-staging",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "wget --spider --no-verbose http://localhost:8080/actuator/health || exit 1"
        ],
        "interval": 10,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 70
      }
    },
    {
      "name": "newrelic-infra",
      "image": "newrelic/nri-ecs:1.12.2",
      "cpu": 64,
      "memory": 128,
      "essential": false,
      "environment": [
        {
          "name": "NRIA_OVERRIDE_HOST_ROOT",
          "value": ""
        },
        {
          "name": "NRIA_IS_FORWARD_ONLY",
          "value": "true"
        },
        {
          "name": "FARGATE",
          "value": "true"
        },
        {
          "name": "NRIA_PASSTHROUGH_ENVIRONMENT",
          "value": "ECS_CONTAINER_METADATA_URI,ECS_CONTAINER_METADATA_URI_V4,FARGATE"
        },
        {
          "name": "NRIA_DISPLAY_NAME",
          "value": "auth-staging"
        },
        {
          "name": "NRIA_VERBOSE",
          "value": "1"
        }
      ],
      "secrets": [
        {
          "name": "NRIA_LICENSE_KEY",
          "valueFrom": "arn:aws:secretsmanager:ap-south-1:567347231314:secret:NEW_RELIC_LICENSE_KEY-eemLJ8:LicenseKey::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/newrelic",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "newrelic"
        }
      }
    }
  ],
  "executionRoleArn": "arn:aws:iam::567347231314:role/ecsTaskExecutionRole-userService",
  "taskRoleArn": "arn:aws:iam::567347231314:role/cc-auth-service-role",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "576",
  "memory": "1152",
  "tags": [
    {
      "key": "environment",
      "value": "staging"
    },
    {
      "key": "application",
      "value": "mpsp"
    }
  ],
  "runtimePlatform": {
    "cpuArchitecture": "ARM64",
    "operatingSystemFamily": "LINUX"
  }
}